<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp">

    <ImageView
        android:id="@+id/busImage"
        android:layout_width="135dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/sutha" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="140dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_busName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suva Travels"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/text_view_busNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BusNumber: BHE 9870"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: 14/04/2019"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time: 7:00"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/text_view_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From: Jaffna"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/text_view_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To: Colombo"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    </LinearLayout>
</RelativeLayout>