<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Button1" parent="Widget.AppCompat.Button.Colored">
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button1_bg</item>
    </style>
    <style name="Button2" parent="Widget.AppCompat.Button.Colored">
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button2</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="HorizontalProgress" parent="Theme.AppCompat.Light"></style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.FabTheme">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.SwitchTheme">
        <item name="colorAccent">@color/teal</item>
    </style>

    <style name="AppTheme.RatingBarTheme">
        <item name="colorAccent">@color/teal</item>
    </style>

</resources>
